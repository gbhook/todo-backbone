body
	background-color #FAFAFA;

li {
  list-style-type: none;
}

.hidden {
  visibility: hidden ;
  display: none;
}

.visible {
  visibility: visible ;
  display: block;
}

.top-nav {
  display: block;
  margin: 0 auto;
  padding: 5px;
  color: black;
  font-size: 28px;
  font-weight: bolder;
  text-align: center;
  background-color: white;
}

.completed {
  font-style: oblique ;
}

#top-nav-container {
  display:block ;
  width:100% ;
}

#task-container {
  width:100%;
  height: 100% ;
  background-color: white;
}



#main-content {
  margin: 0 auto ;
  width:80%;
  border-color: #666;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
  box-shadow: 0 0 10px #666;
}
