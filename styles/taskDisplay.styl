#task-list hr {

  height: 1px;
  color:gray ;
  background-color:gray ;
  border:0px;
  clear:both;
}

.delete-button {
  font-size:12px;
  color:white;
  background-color:red ;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius:3px;
  border:none;
  padding:3px;

}

.task-display-container {
  display:block ;
  margin-top:-5px;
  width:83%;
  padding:1%;
  float:left ;

}

.task-delete-container {
  display:block;
  float:left;
  width:10%;
  text-align:right;
}

.checkbox-container {
  float:left;
  display:block;
  width:3% ;
}


#task-list input {
  width:100%;
}

@media screen and (max-width:480px) {

  .delete-button {
    font-size:8px;
    margin-top:-5px;
  }

  .task-delete-container {
   margin-top : -2px;
  }

}
