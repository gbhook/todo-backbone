

#new-task {
  margin-left:5%;
  margin-right:5%;
  width:90%;
  display:block;
}

#new-task input {
  display:block;
  width:98%;
  padding:1%;
  border:none;
  box-shadow:inset 1px 1px 1px 1px #666;
  font-size: 28px;
  font-style: italic;
  color:gray;
}

#mark-all-complete {
  display:block ;
  font-size: 14px;
  margin-left:5.5%;
  margin-right:6%;
  margin-top:10px;
 }

#complete-all {
  float:left;
}

#mark-all-complete-copy {
  float:left;
  margin-left:1%;
}

#task-list {
  font-size: 28px;
  width:90%;
  float:none;
  margin-top:50px;
  margin-left:5%;
  margin-right:5%;
}

@media screen and (max-width:480px) {

  #task-list {
    font-size: 14px;
    margin-top:30px;
  }

  #mark-all-complete {
    font-size: 10px;
  }

  #new-task input {
    font-size: 14px;
  }

  #complete-all {
    width:3% ;
  }



}



