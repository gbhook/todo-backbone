.delete-button {
  font-size:12px;
  color:white;
  background-color:red ;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius:3px;
  border:none;
  padding:3px;

}

#new-task {

  margin:0 auto ;
  width:100%;
  display:block;
}

#new-task input {
  display:block;
  padding:5px;
  border:1px;
  border-style:solid;
  border-color:#666;
  box-shadow:inset 1px 1px 1px 1px #666;
  font-size: 24px;
  color:gray;

}

#mark-all-complete {
  display:block ;
  font-size:12px;
}

#task-list {
  font-size: 28px;
  width:90%;
  float:none;
}

#task-list hr {

  height: 1px;
  color:gray ;
  background-color:gray ;
  border:0px;
  clear:both;
}

#task-list li {
  list-style-type: none;
  margin-left:0px;
}

#task-list li input {
  width:100%;
}

.task-display-container {
  display:block ;
  margin-top:-5px;
  width:85%;
  padding:1%;
  float:left ;
}

.task-delete-container {
  display:block;
  //margin-left:90%
  float:left;
  width:10%;
}

.checkbox-container {
  float:left;
  width:3% ;
}
