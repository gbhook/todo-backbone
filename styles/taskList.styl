#new-task {

  margin-left:5%;
  margin-right:5%;
  width:90%;
  display:block;
}

#new-task input {
  display:block;
  width:98%;
  padding:1%;
  border:1px;
  border-style:solid;
  border-color:#666;
  box-shadow:inset 1px 1px 1px 1px #666;
  font-size: 24px;
  font-style: italic;
  color:gray;
}

#mark-all-complete {
  display:block ;
  font-size:12px;
  margin-left:5%;
  margin-right:5%;
  margin-top:10px;
 }

#complete-all {

  float:left;

}

#mark-all-complete-copy {

  float:left;
  margin-left:1%;

}

#task-list {
  font-size: 28px;
  width:90%;
  float:none;
  margin-top:50px;
  margin-left:5%;
  margin-right:5%;
}

#task-list hr {

  height: 1px;
  color:gray ;
  background-color:gray ;
  border:0px;
  clear:both;
}

#task-list input {
  width:100%;
}


